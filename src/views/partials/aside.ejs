<!-- cities widget - Not mobile -->
<div class="aside-widget">
    <div class="row filters-widget d-none d-sm-flex">
        <div class="col-12 col-sm-6 col-md-12 col-lg-12 mb-2">
            <div class="title"><h2 class="noselect mb-2"><%= translation.cities %></h2></div>

            <ul class="cities-filter">
            <% cities.forEach((city, index) => { %>
                <li>
                    <input type="checkbox" class="filter-checkbox form-check-input" value="<%= city.code %>">
                    <label class="form-check-label noselect"><%= city.name %></label>
                </li>
            <% }); %>
            </ul>
        </div>

        <div class="col-12 col-sm-6 col-md-12 col-lg-12">
            <div class="title"><h2 class="noselect mb-2 mt-md-3"><%= translation.tags %></h2></div>
            <ul class="tags-filter"><% tags.filter(tag_ => tag_.status && tag_.featured).forEach((tag, index) => { %>
                <li>
                    <input type="checkbox" class="filter-checkbox form-check-input" value="<%= tag.code %>">
                    <label class="form-check-label noselect"><%= tag.title %></label>
                </li>
            <% }); %></ul>
        </div>
        <button type="button" class="btn btn-info btn-sm update-filters text-uppercase"><%= translation.filter %></button>
    </div>
</div>
<!-- /cities widget -->

