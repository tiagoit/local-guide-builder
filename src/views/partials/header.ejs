                        <% } %>

                        <% if(lang !== 'en') { %>
                            <a class="dropdown-item" href="?clang=en">
                                <img src="/img/lang-icons/usa-flag.png" alt="usa flag">
                                <span>English</span>
                            </a>
                        <% } %>

                        <% if(lang !== 'es') { %>
                            <a class="dropdown-item" href="?clang=es">
                                <img src="/img/lang-icons/spain-flag.png" alt="spain flag">
